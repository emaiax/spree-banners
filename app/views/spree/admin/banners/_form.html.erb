<%= f.label :title, t("banner.title") %>
<%= f.text_field :title %>
<br />
<%= f.label :url, t("banner.url") %>
<%= f.text_field :url %>
<br />
<%= f.label :position, t("banner.position") %>
<%= f.select :position, options_for_select(Spree::Banner::POSITIONS.collect {|x| [x.first.capitalize, x.last]}, :selected => @banner.position) %>
<br />
<%= f.label :attachment_width, t("banner.attachment_width") %>
<%= f.text_field :attachment_width, :required => true %>
<br />
<%= f.label :attachment_height, t("banner.attachment_height") %>
<%= f.text_field :attachment_height %>
<br />
<%= f.label :enabled, t("banner.enabled") %>
<%= f.check_box :enabled %>
<br />
<%= f.label :attachment, t("banner.image") %>
<%= f.file_field :attachment %>
<br />
<%= f.object.attachment.blank? ? f.content_tag(:span, t("banner.no_image")) : image_tag(f.object.attachment.url(:thumbnail)) %>

<br />
<h1><%= t("taxons") %></h1>

<div id="selected-taxons" data-hook>
  <%= render :partial => 'selected', :locals => { :banner => f.object, :taxons => f.object.taxons } %>
</div>
